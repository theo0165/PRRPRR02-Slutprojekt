<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane fx:id="body" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1">
    <stylesheets>
        <URL value="@../resources/style/QuizStyle.css" />
    </stylesheets>

    <Text fx:id="counter" text="1/1" StackPane.alignment="TOP_LEFT">
      <StackPane.margin>
         <Insets left="10.0" top="10.0" />
      </StackPane.margin></Text>
    <Text fx:id="question" text="Question" StackPane.alignment="TOP_CENTER">
      <StackPane.margin>
         <Insets top="40.0" />
      </StackPane.margin>
    </Text>
    <VBox fx:id="answerContainer" alignment="CENTER" fillWidth="false">
        <Button fx:id="answerOne" styleClass="answerBtn" text="Button 1">
         <VBox.margin>
            <Insets bottom="30.0" />
         </VBox.margin>
         <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
         </padding></Button>
        <Button fx:id="answerTwo" styleClass="answerBtn" text="This is a very looooooooong awnser">
         <VBox.margin>
            <Insets bottom="30.0" />
         </VBox.margin>
         <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
         </padding></Button>
        <Button fx:id="answerThree" styleClass="answerBtn" text="Button 3">
         <VBox.margin>
            <Insets bottom="30.0" />
         </VBox.margin>
         <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
         </padding></Button>
        <Button fx:id="answerFour" styleClass="answerBtn" text="Button 4">
         <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
         </padding></Button>
      <StackPane.margin>
         <Insets top="20.0" />
      </StackPane.margin>
    </VBox>
</StackPane>
